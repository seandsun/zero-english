---
interface NavItem {
  name: string;
  href: string;
}

// Misma ruta del "base" en astro.config.mjs
const siteBase = import.meta.env.BASE_URL;

const navItems: NavItem[] = [
  { name: 'Home', href: `${siteBase}` },
  { name: 'Temas', href: `${siteBase}english/` },
];

interface Props {
  isHorizontal?: boolean;
}

const { isHorizontal = false } = Astro.props as Props;

const currentPathname = Astro.url.pathname;
---

<ul
  class={`gap-5 ${isHorizontal ? 'flex-row mt-0 hidden md:flex md:gap-8' : 'flex flex-col w-full mt-[86px]'}`}
>
  {
    navItems.map((item: NavItem) => (
      <li>
        <a
          class={`text-md font-semibold pt-0.5 pb-1 px-2 rounded-sm shadow-sm md:text-base ${currentPathname === item.href ? 'bg-green-100 text-green-800' : 'bg-white text-gray-950'} hover:text-green-600 transition-all duration-300 ease-in-out`}
          href={item.href}
        >
          {item.name}
        </a>
      </li>
    ))
  }
</ul>
